<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:weightSum="9"
    android:clickable="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/paint_stroke"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_gray"
            android:text=" size 5"
            android:textColor="@color/colorAccent"
            android:textSize="17dp"
            android:layout_marginRight="6dp"
            android:textAlignment="center" />

        <ImageButton
            android:id="@+id/preservation_imageButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_gray"
            android:padding="0.5dp"
            android:scaleType="fitXY"
            android:src="@drawable/bpreservation"
            android:layout_marginRight="6dp" />

        <ImageButton
            android:id="@+id/home_imageButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_gray"
            android:padding="0.5dp"
            android:scaleType="fitXY"
            android:src="@drawable/bhome"
            android:layout_marginRight="6dp" />

        <ImageButton
            android:id="@+id/clear_imageButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_gray"
            android:padding="0.5dp"
            android:scaleType="fitXY"
            android:src="@drawable/bclear"
            android:layout_marginRight="6dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/black_imageView"
            android:layout_width="32dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:background="@drawable/btn_gray"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/black" />

        <ImageButton
            android:id="@+id/brown_imageView"
            android:layout_width="32dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:background="@drawable/btn_gray"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/brown" />

        <ImageButton
            android:id="@+id/wathet_imageView"
            android:layout_width="32dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:background="@drawable/btn_gray"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/wathet" />

        <ImageButton
            android:id="@+id/green_imageView"
            android:layout_width="32dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:background="@drawable/btn_gray"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/green" />

        <ImageButton
            android:id="@+id/violet_imageView"
            android:layout_width="32dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:background="@drawable/btn_gray"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/violet" />

        <ImageButton
            android:id="@+id/blue_imageView"
            android:layout_width="32dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:background="@drawable/btn_gray"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/blue" />

        <ImageButton
            android:id="@+id/orange_imageView"
            android:layout_width="32dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:background="@drawable/btn_gray"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/orange" />

        <ImageButton
            android:id="@+id/claret_imageView"
            android:layout_width="32dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:background="@drawable/btn_gray"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/claret" />

        <ImageButton
            android:id="@+id/pink_imageView"
            android:layout_width="32dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:background="@drawable/btn_gray"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/pink" />

        <ImageButton
            android:id="@+id/yellow_imageView"
            android:layout_width="32dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:background="@drawable/btn_gray"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/yellow" />

        <ImageButton
            android:id="@+id/gray_imageView"
            android:layout_width="32dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:background="@drawable/btn_gray"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/gray" />

        <ImageButton
            android:id="@+id/red_imageView"
            android:layout_width="32dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:background="@drawable/btn_gray"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/red" />

        <ImageButton
            android:id="@+id/eraser_imageView"
            android:layout_width="32dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:background="@drawable/btn_gray"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/eraser" />
    </LinearLayout>

</LinearLayout>